        <activity
            android:name="com.coggroach.minekeeper.activities.GameActivity"
            android:label="MineKeeper" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
